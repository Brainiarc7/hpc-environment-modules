# for Tcl script use only
set     appname         ruby
set     version         2.2.3
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     datarootdir     ${prefix}/share
set     url             "https://www.ruby-lang.org/en/"
set     msg             "Ruby is an open source programming language with a focus on simplicity and productivity.\nRuby Official Site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}
prepend-path    MANPATH     ${datarootdir}/man

